// 来自：https://github.com/Microsoft/vscode-recipes/tree/master/Angular-CLI
{
    "version": "2.0.0",
    "tasks": [
      {
        "identifier": "ng serve",
        "type": "npm",
        "script": "start",
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": [
            "relative",
            "${cwd}"
          ],
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "Compiling...|TS\\d+:"
            },
            "endsPattern": {
              "regexp": "Compiled |Failed to compile."
            }
          }
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "启动",
        "type": "shell",
        "command": "./boot.sh",
        // "windows": {
        //   "command": ".\\boot.cmd"
        // },
        "presentation": {
          "reveal": "always"
        },
        // "args": [
        //   "${workspaceFolder}"
        // ],
        "problemMatcher": [
          "$tsc"
        ]
      }
    ]
  }